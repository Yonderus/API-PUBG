<Window x:Class="TuProyecto.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:PUBG_Views.Controls"
        Title="PUBG Mini App"
        Height="780"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PubgBg}"
        FontFamily="Segoe UI">

    <Grid Margin="18">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Logo 2 PUBG.webp" Stretch="Uniform" Opacity="0.06" AlignmentX="Right" AlignmentY="Top"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PubgSurface}" CornerRadius="14" Padding="14" BorderBrush="{StaticResource PubgBorder}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Width="64"
                       Height="42"
                       Stretch="Uniform"
                       Source="Assets/Logo 2 PUBG.webp"/>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="PUBG" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PubgAccent}"/>
                    <TextBlock Text="Mini App" FontSize="11" Foreground="{StaticResource PubgMuted}" Margin="1,-2,0,0"/>
                </StackPanel>

                <TextBox x:Name="TxtNombre"
                         Grid.Column="4"
                         Height="42"
                         FontSize="14"
                         Padding="12,9"
                         VerticalContentAlignment="Center"
                         Text=""/>

                <Button x:Name="BtnBuscar"
                        Grid.Column="4"
                        Height="42"
                        Padding="22,0"
                        Click="BtnBuscar_Click"
                        Content="Buscar" Grid.ColumnSpan="2" Margin="888,0,0,0"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,14,0,14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <controls:PlayerCardControl x:Name="PlayerCard" Margin="0,0,0,14"/>

                <Border Background="{StaticResource PubgSurface}" CornerRadius="14" Padding="12" BorderBrush="{StaticResource PubgBorder}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel Margin="2,0,0,10">
                            <Border Width="6" Height="18" Background="{StaticResource PubgAccent}" CornerRadius="3" Margin="0,0,8,0"/>
                            <TextBlock Text="Ultimas partidas"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PubgAccent}"/>
                        </DockPanel>

                        <ListBox x:Name="ListaMatches"
                                 Grid.Row="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionChanged="ListaMatches_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12" Foreground="{StaticResource PubgText}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </StackPanel>

            <controls:MatchDetailControl x:Name="MatchDetail" Grid.Column="2"/>
        </Grid>

        <TextBlock x:Name="TxtEstado"
                   Grid.Row="2"
                   Text=""
                   Foreground="{StaticResource PubgMuted}"
                   FontSize="12"
                   Margin="6,0,0,0"/>
    </Grid>
</Window>
