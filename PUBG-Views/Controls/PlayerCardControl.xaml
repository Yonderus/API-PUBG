<UserControl x:Class="PUBG_Views.Controls.PlayerCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="400">

    <Border Background="White" CornerRadius="14" Padding="14" BorderBrush="#E6EAF0" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Jugador" Foreground="#64748B" FontSize="12"/>
            <TextBlock x:Name="TxtNombre" Text="-" Foreground="#0F172A" FontWeight="SemiBold" FontSize="18" Margin="0,4,0,0"/>
            <TextBlock x:Name="TxtId" Text="" Foreground="#334155" FontFamily="Consolas" FontSize="12" Margin="0,8,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
