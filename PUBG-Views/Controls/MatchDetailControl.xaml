<UserControl x:Class="PUBG_Views.Controls.MatchDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700">

    <Border Background="{StaticResource PubgSurface}" CornerRadius="14" Padding="14" BorderBrush="{StaticResource PubgBorder}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Detalle de match" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PubgText}"/>

            <TextBlock x:Name="TxtStatus" Grid.Row="1" Text="Selecciona un match" Foreground="{StaticResource PubgMuted}" Margin="0,6,0,0"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,14,0,0">
                <TextBlock Text="ID: " Foreground="{StaticResource PubgMuted}"/>
                <TextBlock x:Name="TxtMatchId" Text="-" Foreground="{StaticResource PubgText}" FontFamily="Consolas"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="Mapa: " Foreground="{StaticResource PubgMuted}"/>
                <TextBlock x:Name="TxtMap" Text="-" Foreground="{StaticResource PubgText}"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,14,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Modo: " Foreground="{StaticResource PubgMuted}"/>
                    <TextBlock x:Name="TxtMode" Text="-" Foreground="{StaticResource PubgText}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Duracion: " Foreground="{StaticResource PubgMuted}"/>
                    <TextBlock x:Name="TxtDuration" Text="-" Foreground="{StaticResource PubgText}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Iniciado: " Foreground="{StaticResource PubgMuted}"/>
                    <TextBlock x:Name="TxtCreated" Text="-" Foreground="{StaticResource PubgText}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
